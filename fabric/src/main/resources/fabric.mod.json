{
	"schemaVersion": 1,
	"id": "shouldersurfing",
	"version": "${version}",
	"name": "Shoulder Surfing Reloaded",
	"description": "Changes the vanilla third person camera to an over-the-shoulder camera, as made popular by Capcom's \"Resident Evil 4\".\nIncludes keybindings for adjusting the camera, along with various settings in the config file.\nCode injection may fail if using mods that mess with the base files.",
	"authors": [
		"Sabar",
		"Exopandora"
	],
	"contact": {
		"homepage": "https://www.curseforge.com/minecraft/mc-mods/shoulder-surfing-reloaded",
		"sources": "https://github.com/Exopandora/shouldersurfing"
	},
	"license": "MIT",
	"icon": "logo.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"com.teamderpy.shouldersurfing.ShoulderSurfingFabric"
		]
	},
	"mixins": [
		"shouldersurfing.mixins.json",
		"shouldersurfing.compat.iris.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.13",
		"fabric": ">=0.46.4",
		"minecraft": "~1.18",
		"forgeconfigapiport": ">=3.2.3",
		"java": ">=17"
	},
	"custom": {
		"waila:plugins": {
			"id": "shouldersurfing:waila_plugin",
			"initializer": "com.teamderpy.shouldersurfing.compatibility.ShoulderSurfingWailaPluginFabric",
			"environment": "client"
		}
	}
}
